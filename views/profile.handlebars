<section aria-labelledby="profile-header">
    <nav>
        <a href="/home">Home</a>
    </nav>
    <h1 id="profile-header">Your Profile</h1>
    <p>Manage your account details and review your contributions.</p>

    <div class="profile-details">
        <h2>Personal Information</h2>
        <form id="edit-profile-form" action="/profile/edit" method="post">
            <!-- Profile editing form fields -->
            <label for="firstName">First Name:</label>
            <input type="text" id="firstName" name="firstName" value="{{user.firstName}}" required>
            <label for="lastName">Last Name:</label>
            <input type="text" id="lastName" name="lastName" value="{{user.lastName}}" required>
            <!-- Additional fields -->
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </form>
    </div>

    <div class="review-history">
        <h2>Your Reviews</h2>
        {{#if user.reviewIds}}
            <ul class="reviews-list">
                {{#each user.reviewIds as |reviewId|}}
                    <li class="review-item">
                        {{> reviewPartial reviewId=reviewId}}
                        <div class="review-actions">
                            <form id="update-review-form" action="/reviews/edit/{{reviewId}}" method="post">
                                <!-- Assume the form in the partials for editing -->
                                <button type="submit" class="btn btn-secondary">Edit</button>
                            </form>
                            <form id="delete-review-form" action="/reviews/delete/{{reviewId}}" method="post" onsubmit="return confirm('Are you sure you want to delete this review?');">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </li>
                {{/each}}
            </ul>
        {{else}}
            <p>You have not written any reviews yet.</p>
        {{/if}}
    </div>

    <!-- Error container for displaying messages -->
    <div id="errorContainer" style="display: none;"></div>
</section>

