<section aria-labelledby="profile-header">
    <h1 id="profile-header" class="h1-content">Your Profile</h1>
    <p class="p-content">Manage your account details and review your contributions.</p>

    <div class="user-info-table">
        <table class="table table-hover">
            <thead>
            <tr>
                <th>Field</th>
                <th>Information</th>
            </tr>
            </thead>
            <tbody>
            <tr>
                <td>First Name</td>
                <td>{{user.firstName}}</td>
            </tr>
            <tr>
                <td>Last Name</td>
                <td>{{user.lastName}}</td>
            </tr>
            {{!-- <tr>
                <td>User Name</td>
                <td>{{user.userName}}</td>
            </tr> --}}
            <tr>
                <td>Email</td>
                <td>{{user.email}}</td>
            </tr>
            <tr>
                <td>City</td>
                <td>{{user.city}}</td>
            </tr>
            <tr>
                <td>State</td>
                <td>{{user.state}}</td>
            </tr>
            <tr>
                <td>Country</td>
                <td>{{user.country}}</td>
            </tr>
            <tr>
                <td>Age</td>
                <td>{{user.age}}</td>
            </tr>
            <tr>
                <td>Highest Diploma</td>
                <td>{{user.diploma}}</td>
            </tr>
            <tr>
                <td>Discipline</td>
                <td>{{user.discipline}}</td>
            </tr>
            </tbody>
        </table>
    </div>

    <form id="edit-profile-form" action="/profile/edit" method="post" class="profile-form">
        <h2>Change Your Information</h2>
        <h3>You need to fill in all the fields.</h3>

        <div class="form-group">
            <label for="firstName">First Name:</label>
            <input type="text" id="firstName" name="firstName" value="{{user.firstName}}" required>
        </div>

        <div class="form-group">
            <label for="lastName">Last Name:</label>
            <input type="text" id="lastName" name="lastName" value="{{user.lastName}}" required>
        </div>

        {{!-- <div class="form-group">
            <label for="username">User Name:</label>
            <input type="text" id="username" name="userName" value="{{user.userName}}" required>
        </div> --}}

        <div class="form-group">
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" value="{{user.email}}" required>
        </div>

        <div class="form-group">
            <label for="city">City:</label>
            <input type="text" id="city" name="city" value="{{user.city}}" required>
        </div>

        <div class="form-group">
            <label for="state">State:</label>
            <input type="text" id="state" name="state" value="{{user.state}}" required>
        </div>

        <div class="form-group">
            <label for="country">Country:</label>
            <input type="text" id="country" name="country" value="{{user.country}}" required>
        </div>

        <div class="form-group">
            <label for="age">Age:</label>
            <input type="number" id="age" name="age" value="{{user.age}}" min="18" required>
        </div>

        <div class="form-group">
            <label for="diploma">Highest Diploma:</label>
            <input type="text" id="diploma" name="diploma" value="{{user.diploma}}" required>
        </div>

        <div class="form-group">
            <label for="discipline">Discipline:</label>
            <input type="text" id="discipline" name="discipline" value="{{user.discipline}}" required>
        </div>

        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>

    <div class="review-history">
        <h2>Your Reviews</h2>
        {{#if user.reviews}}
            <ul class="reviews-list">
                {{#each user.reviews as |review|}}
                    <li class="review-item">
                        <p>{{review.content}}</p>
                        <!-- Other review details here -->
                        <div class="review-actions">
                            <button type="button" class="btn btn-secondary" onclick="location.href='/reviews/edit/{{review.id}}'">Edit</button>
                            <button type="button" class="btn btn-danger" onclick="if(confirm('Are you sure you want to delete this review?')) location.href='/reviews/delete/{{review.id}}'">Delete</button>
                        </div>
                    </li>
                {{/each}}
            </ul>
        {{else}}
            <p>You have not written any reviews yet.</p>
        {{/if}}
    </div>
</section>

