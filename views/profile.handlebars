<section aria-labelledby="profile-header">
    <nav>
        <a href="/landing">Home</a>
    </nav>
    <h1 id="profile-header">Your Profile</h1>
    <p>Manage your account details and review your contributions.</p>

    <div class="profile-details">
        <h2>Personal Information</h2>
        <p><strong>Username:</strong> {{user.username}}</p>
        <p><strong>Email:</strong> {{user.email}}</p>
        <a href="/edit-profile" class="btn btn-secondary">Edit Profile</a>
    </div>

    <div class="review-history">
        <h2>Your Reviews</h2>
        {{#if user.reviews}}
            <ul class="reviews-list">
                {{#each user.reviews}}
                    <li class="review-item">
                        <h3>{{this.housingName}}</h3>
                        <p>{{this.content}}</p>
                        <div class="review-actions">
                            <a href="/reviews/edit/{{this.id}}" class="btn btn-secondary">Edit</a>
                            <a href="/reviews/delete/{{this.id}}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this review?');">Delete</a>
                        </div>
                    </li>
                {{/each}}
            </ul>
        {{else}}
            <p>You have not written any reviews yet.</p>
        {{/if}}
    </div>
</section>
