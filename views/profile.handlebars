<section aria-labelledby="profile-header">
    <nav>
        <a href="/landing">Home</a>
    </nav>
    <h1 id="profile-header">Your Profile</h1>
    <p>Manage your account details and review your contributions.</p>

    <div class="profile-details">
        <h2>Personal Information</h2>
        <form id="edit-profile-form" action="/profile/edit" method="post">
            <label for="firstName">First Name:</label>
            <input type="text" id="firstName" name="firstName" value="{{user.firstName}}" required>
            <label for="lastName">Last Name:</label>
            <input type="text" id="lastName" name="lastName" value="{{user.lastName}}" required>
            <label for="email">Email:</label>
            <input type="email" id="email" name="email" value="{{user.email}}" required>
            <label for="city">City:</label>
            <input type="text" id="city" name="city" value="{{user.city}}" required>
            <label for="state">State:</label>
            <input type="text" id="state" name="state" value="{{user.state}}" required>
            <label for="country">Country:</label>
            <input type="text" id="country" name="country" value="{{user.country}}" required>
            <label for="age">Age:</label>
            <input type="number" id="age" name="age" value="{{user.age}}" required>
            <label for="diploma">Highest Diploma:</label>
            <input type="text" id="diploma" name="diploma" value="{{user.diploma}}" required>
            <label for="discipline">Field of Study:</label>
            <input type="text" id="discipline" name="discipline" value="{{user.discipline}}" required>
            <button type="submit" class="btn btn-primary">Save Changes</button>
        </form>
    </div>

    <div class="review-history">
        <h2>Your Reviews</h2>
        {{#if user.reviewIds}}
            <ul class="reviews-list">
                {{#each user.reviewIds as |reviewId|}}
                {{!-- Assuming you have a helper to fetch review details by ID --}}
                    <li class="review-item">
                        {{> reviewPartial reviewId=reviewId}}
                        <div class="review-actions">
                            <a href="/reviews/edit/{{reviewId}}" class="btn btn-secondary">Edit</a>
                            <a href="/reviews/delete/{{reviewId}}" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this review?');">Delete</a>
                        </div>
                    </li>
                {{/each}}
            </ul>
        {{else}}
            <p>You have not written any reviews yet.</p>
        {{/if}}
    </div>
</section>
