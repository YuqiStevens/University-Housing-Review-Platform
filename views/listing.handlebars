<section aria-labelledby="listings-header">
    <nav>
        <a href="/home">Home</a>
        <div class="dropdown">
            <button class="dropbtn">Personal Center</button>
            <div class="dropdown-content">
                <a href="/profile">Profile</a>
                <a href="/password">Password Change</a>
                <a href="/logout">Logout</a>
            </div>
        </div>
    </nav>

    <h1 id="listings-header">Housing Listings</h1>
    <p>Explore housing options near the university. Click on any listing to view more details, including reviews and ratings.</p>

    {{#if listings.length}}
        <ul class="housing-list">
            {{#each listings}}
                <li class="housing-item">
                    <a href="/housing/{{this.id}}" class="housing-link">
                        <img src="{{this.imageUrl}}" alt="Image of {{this.name}}" class="housing-image">
                        <div class="housing-info">
                            <h2>{{this.name}}</h2>
                            <p class="housing-location">{{this.location}}</p>
                            <p class="housing-rating">Rating: {{this.rating}} / 5</p>
                        </div>
                    </a>
                </li>
            {{/each}}
        </ul>
    {{else}}
        <p>No listings found. Try broadening your search criteria.</p>
    {{/if}}
</section>
