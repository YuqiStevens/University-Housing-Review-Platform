        <div class="dropdown">
            <button class="dropbtn">Personal Center</button>
            <div class="dropdown-content">
                <a href="/profile">Profile</a>
                <a href="/password/change">Password Change</a>
                <a href="/logout">Logout</a>
            </div>
        </div>
        {{#if isAdmin}}
            <a href="/admin/dashboard">Admin Dashboard</a>
