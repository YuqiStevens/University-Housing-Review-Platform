<section aria-labelledby="profile-header">
    <h1 id="profile-header">Your Profile</h1>
    <p>Manage your account details and review your contributions.</p>

    <div class="profile-details">
        <h2>Personal Information</h2>
        <p><strong>Username:</strong> <%= user.username %></p>
        <p><strong>Email:</strong> <%= user.email %></p>
        <a href="/edit-profile" class="btn btn-secondary">Edit Profile</a>
    </div>

    <div class="review-history">
        <h2>Your Reviews</h2>
        <% if (user.reviews && user.reviews.length > 0) { %>
            <ul class="reviews-list">
                <% user.reviews.forEach(function(review) { %>
                    <li class="review-item">
                        <h3><%= review.housingName %></h3>
                        <p><%= review.content %></p>
                        <div class="review-actions">
                            <a href="/reviews/edit/<%= review.id %>" class="btn btn-secondary">Edit</a>
                            <a href="/reviews/delete/<%= review.id %>" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this review?');">Delete</a>
                        </div>
                    </li>
                <% }); %>
            </ul>
        <% } else { %>
            <p>You have not written any reviews yet.</p>
        <% } %>
    </div>
</section>
