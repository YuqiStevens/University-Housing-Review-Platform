<section aria-labelledby="edit-review-header">
    <nav>
        <a href="/housings/{{housing.id}}">Back to Housing</a>
        <a href="/reviews/{{review.id}}">Back to Review</a>
    </nav>
    <h1 id="edit-review-header">Edit Review: {{review.title}}</h1>

    <form action="/reviews/edit/{{review.id}}" method="post">
        <div class="form-group">
            <label for="title">Review Title:</label>
            <input type="text" id="title" name="title" value="{{review.title}}" required>
        </div>

        <div class="form-group">
            <label for="rating">Rating:</label>
            <select id="rating" name="rating" required>
                <option value="1" {{#if (eq review.rating 1)}}selected{{/if}}>1 - Poor</option>
                <option value="2" {{#if (eq review.rating 2)}}selected{{/if}}>2 - Fair</option>
                <option value="3" {{#if (eq review.rating 3)}}selected{{/if}}>3 - Good</option>
                <option value="4" {{#if (eq review.rating 4)}}selected{{/if}}>4 - Very Good</option>
                <option value="5" {{#if (eq review.rating 5)}}selected{{/if}}>5 - Excellent</option>
            </select>
        </div>

        <div class="form-group">
            <label for="body">Review Content:</label>
            <textarea id="body" name="body" required>{{review.body}}</textarea>
        </div>

        <div class="form-group">
            <label for="images">Image URLs (comma-separated):</label>
            <input type="text" id="images" name="images" value="{{review.images | join ', '}}" placeholder="Enter image URLs, separated by commas">
        </div>

        <button type="submit" class="btn btn-primary">Update Review</button>
    </form>
</section>
