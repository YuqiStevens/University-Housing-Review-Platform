<section aria-labelledby="edit-housing-header">
    <nav>
        <a href="/housing/{{housing.id}}">Back to Housing Details</a>
    </nav>
    <h1 id="edit-housing-header">Edit Housing: {{housing.name}}</h1>

    <form action="/housing/{{housing.id}}/update" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="name">Housing Name:</label>
            <input type="text" id="name" name="name" value="{{housing.name}}" required>
        </div>

        <div class="form-group">
            <label for="address">Address:</label>
            <input type="text" id="address" name="address" value="{{housing.address}}" required>
        </div>

        <div class="form-group">
            <label for="city">City:</label>
            <input type="text" id="city" name="city" value="{{housing.city}}" required>
        </div>

        <div class="form-group">
            <label for="price">Price:</label>
            <input type="number" id="price" name="price" value="{{housing.price}}" required>
        </div>

        <div class="form-group">
            <label for="type">Type:</label>
            <select id="type" name="type">
                <option value="Apartment" {{#if (eq housing.type "Apartment")}}selected{{/if}}>Apartment</option>
                <option value="House" {{#if (eq housing.type "House")}}selected{{/if}}>House</option>
                <option value="Townhome" {{#if (eq housing.type "Townhome")}}selected{{/if}}>Townhome</option>
            </select>
        </div>

        <div class="form-group">
            <label for="petPolicy">Pet Policy:</label>
            <select id="petPolicy" name="petPolicy">
                <option value="Allowed" {{#if (eq housing.petPolicy "Allowed")}}selected{{/if}}>Allowed</option>
                <option value="Not Allowed" {{#if (eq housing.petPolicy "Not Allowed")}}selected{{/if}}>Not Allowed</option>
            </select>
        </div>

        <button type="submit" class="btn btn-primary">Update Housing</button>
    </form>
</section>
