<section aria-labelledby="edit-housing-header">
    <nav>
        <a href="/housings/{{housing.id}}">Back to Housing Details</a>
    </nav>
    <h1 id="edit-housing-header">Edit Housing: {{housing.address}}</h1>

    <form action="/housings/edit/{{housing.id}}" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="address">Address:</label>
            <input type="text" id="address" name="address" value="{{housing.address}}" required>
        </div>

        <div class="form-group">
            <label for="zipCode">Zip Code:</label>
            <input type="text" id="zipCode" name="zipCode" value="{{housing.zipCode}}" required>
        </div>

        <div class="form-group">
            <label for="city">City:</label>
            <input type="text" id="city" name="city" value="{{housing.city}}" required>
        </div>

        <div class="form-group">
            <label for="state">State:</label>
            <input type="text" id="state" name="state" value="{{housing.state}}" required>
        </div>

        <div class="form-group">
            <label for="homeType">Home Type:</label>
            <select id="homeType" name="homeType">
                <option value="Apartment" {{#if (eq housing.homeType "Apartment")}}selected{{/if}}>Apartment</option>
                <option value="House" {{#if (eq housing.homeType "House")}}selected{{/if}}>House</option>
                <option value="Townhome" {{#if (eq housing.homeType "Townhome")}}selected{{/if}}>Townhome</option>
            </select>
        </div>

        <div class="form-group">
            <label for="rentalCostMin">Rental Cost:</label>
            <input type="number" id="rentalCostMin" name="rentalCostMin" placeholder="Enter min monthly rent price" required>
        </div>

        <div class="form-group">
            <label for="rentalCostMax">Rental Cost:</label>
            <input type="number" id="rentalCostMax" name="rentalCostMax" placeholder="Enter max monthly rent price" required>
        </div>

        <div class="form-group">
            <label for="petPolicy">Pet Policy:</label>
            <select id="petPolicy" name="petPolicy">
                <option value="Allowed" {{#if (eq housing.petPolicy "Allowed")}}selected{{/if}}>Allowed</option>
                <option value="Not Allowed" {{#if (eq housing.petPolicy "Not Allowed")}}selected{{/if}}>Not Allowed</option>
            </select>
        </div>

        <div class="form-group">
            <label for="garage">Garage:</label>
            <input type="checkbox" id="garage" name="garage" {{#if housing.garage}}checked{{/if}}>
        </div>

        <button type="submit" class="btn btn-primary">Update Housing</button>
    </form>
</section>
